<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="/" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="/themes/sample-theme/assets/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<link href="/themes/sample-theme/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="/themes/sample-theme/assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link href="/themes/sample-theme/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css" />
<link href="/themes/sample-theme/assets/stylesheet/stylesheet.css?1" rel="stylesheet">
<link href="/themes/sample-theme/assets/stylesheet/megamenu.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="/themes/sample-theme/assets/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<nav id="top">
  <div class="container">
      <div class="nav">
          <div class="pull-right top-links top-custom-links-mobile">
              <ul class="list-inline">
                <li class="header-information-bar"><a href="/hakkimizda/"><i class="fa fa-info-circle"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_aboutus }}</span></a></li>
                <li><a href="{{ contact }}"><i class="fa fa-envelope-o"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_contactus }}</span></a></li>
              </ul>
          </div>
          {% if social_icons.status == 1 and social_icons.show_header %}
          <div class="pull-left top-links top-custom-links-mobile">  
              <ul class="list-inline">
                <li class="header-social-icons-list">
                {% if social_icons.facebook %}
                  <a href="{{ social_icons.facebook }}"><i class="fa fa-facebook"></i></a>
                {% endif %}
                {% if social_icons.instagram %}
                  <a href="{{ social_icons.instagram }}"><i class="fa fa-instagram"></i></a>
                {% endif %}
                {% if social_icons.twitter %}
                  <a href="{{ social_icons.twitter }}"><i class="fa fa-twitter"></i></a>
                {% endif %}
                {% if social_icons.linkedin %}
                  <a href="{{ social_icons.linkedin }}"><i class="fa fa-linkedin"></i></a>
                {% endif %}  
                </li>   
              </ul>
          </div>   
      {% endif %}
    </div>
    {{ currency }}
    {{ language }}
    <div class="nav top-links pull-right">
      <ul class="list-inline">         
        <li><a href="{{ contact }}"><i class="fa fa-phone"></i></a> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span></li>
        <li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_account }}</span> <span class="caret"></span></a>
          <ul class="dropdown-menu dropdown-menu-right">
            {% if logged %}
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><a href="{{ download }}">{{ text_download }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a href="{{ register }}">{{ text_register }}</a></li>
            <li><a href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
        </li>
        <li><a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a></li>
        <li><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span></a></li>
        <li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="fa fa-share"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a></li>
      </ul>
    </div>
  </div>
</nav>
<header>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
          <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}</div>
      </div>
      <div class="col-sm-5">{{ search }}</div>
      <div class="col-sm-3">{{ cart }}</div>
    </div>
  </div>
</header>
{{ menu }}
